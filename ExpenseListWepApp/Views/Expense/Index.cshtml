@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">EXPENSES LİST</h2>
        </div>
        <div class="col-6 text-end">
            <a  asp-controller="Expense" asp-action="Upsert" class="btn btn-success">Create new Expense</a>
        </div>
    </div><br />
    <div>
        @if (Model.Count()>0)
        {
            <table class="table table-bordered border-success" style="width:100%">

                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>

                            <td width="20%">@item.ExpenseName</td>
                            <td width="20%">@item.Amount</td>
                          
                            <td class="text-center">
                                <a asp-controller="Expense" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-success w-100">update</a>
                                
                            </td>
                            <td class="text-center">
                                <a asp-controller="Expense" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger w-100">delete</a>
                               
                            </td>


                        </tr>
                    }



                </tbody>


            </table>










        }
        else
        {
            <p>No items created yet</p>
        
        }










    </div>
</div>

  