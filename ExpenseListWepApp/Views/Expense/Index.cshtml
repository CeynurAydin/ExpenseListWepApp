@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>EXPENSES LİST</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success">Create new Expense</a>
        </div>
    </div><br />
    @if(Model.Count()>0)
    {
        <table class="table-success">
            <thead>
                <tr class="align-middle text-success">
                    <th>Expense</th>
                    <th>Amount</th>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr class="align-middle text-success">
                        <th>@expense.ExpenseName</th>
                        <th>@expense.Amount</th>
                        <th>
                            <a class="btn btn-success w-100">create</a>
                        </th>
                        <th>
                            <a class="btn btn-success w-100">delete</a>
                        </th>

                    </tr>

                }
            </tbody>
        </table>
    
    }
    else
    {
    }

</div>