@model Expense
@{
    ViewData["Title"] = "Upsert";
}

<form method="post" asp-action="Upsert">
    <div class="p-3 col-12">
        <input type="hidden" asp-for="Id" />
        @{
            if (Model.Id == 0)
            {
                <h2 class="text-success pl-3">Add Expense </h2>
            }
            else
            {
                <h2 class="text-success pl-3">Update Expense </h2>
            }
        }
        <div class="row col-6">
            <div class="pb-3">
                <label asp-for="ExpenseName" class="form-label text-success"></label>
                <input asp-for="ExpenseName" class="form-control" />
                <span asp-validation-for="ExpenseName" class="text-danger"></span>
            </div>
            <div class="pb-3">
                <label asp-for="Amount" class="form-label text-success"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-3 text-start">
                <a asp-action="Index" class="btn btn-warning w-100 ">Back</a>
            </div>
            <div class="col-3 text-end">

                @{
                    if (Model.Id == 0)
                    {
                        <input type="submit" class="btn btn-success w-100" value="Create" />
                    }
                    else
                    {
                        <input type="submit" class="btn btn-success w-100" value="Update" />
                    }
                }
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }